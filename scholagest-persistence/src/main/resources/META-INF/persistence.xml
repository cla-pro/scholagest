<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	<persistence-unit name="scholagest-pu"
		transaction-type="JTA">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
<!-- 		<jta-data-source>java:/DefaultDS</jta-data-source> -->
		<!-- <mapping-file>hibernate-mapping.xml</mapping-file> -->

		<class>net.scholagest.db.entity.TeacherEntity</class>
		<class>net.scholagest.db.entity.TeacherDetailEntity</class>

		<properties>
			<!-- <property name="hibernate.dialect" value="org.hibernate.dialect.HSQLDialect"/> -->
			<!-- <property name="hibernate.hbm2ddl.auto" value="create-drop"/> -->
			<property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/scholagest" />
			<property name="javax.persistence.jdbc.user" value="scholagest_dba" />
			<property name="javax.persistence.jdbc.password" value="scholagestdba" />
		</properties>
	</persistence-unit>
	<persistence-unit name="scholagest-test-pu"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
<!-- 		<jta-data-source>java:/DefaultDS</jta-data-source> -->
		<!-- <mapping-file>hibernate-mapping.xml</mapping-file> -->

		<class>net.scholagest.db.entity.TeacherEntity</class>
		<class>net.scholagest.db.entity.TeacherDetailEntity</class>

		<properties>
			<property name="hibernate.connection.url" value="jdbc:h2:mem:~test" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.H2Dialect"></property>
			<property name="hibernate.connection.driver_class" value="org.h2.Driver" />
			<property name="hibernate.connection.password" value="admin" />
			<property name="hibernate.connection.username" value="admin" />
		</properties>
	</persistence-unit>
</persistence>