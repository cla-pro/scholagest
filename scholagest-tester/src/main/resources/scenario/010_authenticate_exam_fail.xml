<?xml version="1.0" encoding="UTF-8"?>
<scenario xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="xsd/scenario.xsd">
    <name>Exam service authentication with invalid token</name>
    <description></description>
    <baseURL>http://localhost:8080/scholagest-app/services</baseURL>
    <initializationFolder>initializer/tester/</initializationFolder>
    <calls>
        <call>
            <id>1 - Call the service (exam/create) with an invalid token</id>
            <url>/exam/create</url>
            <httpMethod>GET</httpMethod>
            <parameters>token=abcdefghij</parameters>
            <expectedResult>
                <result>
                    <path>errorCode</path>
                    <value>0.0</value>
                </result>
            </expectedResult>
        </call>
        <call>
            <id>2 - Call the service (exam/getExamsInfo) with an invalid token</id>
            <url>/exam/getExamsInfo</url>
            <httpMethod>GET</httpMethod>
            <parameters>token=abcdefghij</parameters>
            <expectedResult>
                <result>
                    <path>errorCode</path>
                    <value>0.0</value>
                </result>
            </expectedResult>
        </call>
    </calls>
</scenario>