<?xml version="1.0" encoding="UTF-8"?>
<scenario xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="xsd/scenario.xsd">
    <name>Year service authentication with invalid token</name>
    <description></description>
    <baseURL>http://localhost:8080/scholagest-app/services</baseURL>
    <initializationFolder>initializer/tester/</initializationFolder>
    <calls>
        <call>
            <id>1 - Call the service (year/start) with an invalid token</id>
            <url>/year/start</url>
            <httpMethod>GET</httpMethod>
            <parameters>token=abcdefghij</parameters>
            <expectedResult>
                <result>
                    <path>errorCode</path>
                    <value>0.0</value>
                </result>
            </expectedResult>
        </call>
        <call>
            <id>2 - Call the service (year/stop) with an invalid token</id>
            <url>/year/stop</url>
            <httpMethod>GET</httpMethod>
            <parameters>token=abcdefghij</parameters>
            <expectedResult>
                <result>
                    <path>errorCode</path>
                    <value>0.0</value>
                </result>
            </expectedResult>
        </call>
        <call>
            <id>3 - Call the service (year/getCurrent) with an invalid token</id>
            <url>/year/getCurrent</url>
            <httpMethod>GET</httpMethod>
            <parameters>token=abcdefghij</parameters>
            <expectedResult>
                <result>
                    <path>errorCode</path>
                    <value>0.0</value>
                </result>
            </expectedResult>
        </call>
        <call>
            <id>4 - Call the service (year/getYears) with an invalid token</id>
            <url>/year/getYears</url>
            <httpMethod>GET</httpMethod>
            <parameters>token=abcdefghij</parameters>
            <expectedResult>
                <result>
                    <path>errorCode</path>
                    <value>0.0</value>
                </result>
            </expectedResult>
        </call>
    </calls>
</scenario>