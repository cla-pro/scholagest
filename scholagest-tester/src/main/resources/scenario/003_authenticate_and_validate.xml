<?xml version="1.0" encoding="UTF-8"?>
<scenario xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="xsd/scenario.xsd">
    <name>User service authentication with a valid token</name>
    <description></description>
    <baseURL>http://localhost:8080/scholagest-app/services</baseURL>
    <initializationFolder>initializer/tester/</initializationFolder>
    <calls>
        <call>
            <id>1 - Authenticate the credentials (admin/admin)</id>
            <url>/user/authenticate</url>
            <parameters>username=admin&amp;password=admin</parameters>
            <httpMethod>GET</httpMethod>
            <expectedResult>
                <result>
                	<path>token</path>
                	<storeIn>token</storeIn>
                </result>
            </expectedResult>
        </call>
        <call>
            <id>2 - Authenticate the token</id>
            <url>/user/validateToken</url>
            <httpMethod>POST</httpMethod>
            <parameters>{token:'$$token$$'}</parameters>
            <expectedResult>
                <result>
                    <path>errorCode</path>
                    <value>null</value>
                </result>
            </expectedResult>
        </call>
    </calls>
</scenario>