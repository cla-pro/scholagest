    <name>Scenario 1</name>
    <description></description>
    <baseURL>http://localhost:8080/scholagest-app/services</baseURL>
    <calls>
        <call>
            <id>1.1 - Authenticate admin</id>
            <url>/user/authenticate</url>
            <httpMethod>GET</httpMethod>
            <parameters>username=admin&password=admin</parameters>
            <expectedResult>
                <result>
                    <path>token</path>
                    <storeIn>adminToken</storeIn>
                </result>
            </expectedResult>
        </call>
