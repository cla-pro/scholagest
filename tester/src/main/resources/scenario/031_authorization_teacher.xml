<?xml version="1.0" encoding="UTF-8"?>
<scenario xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="xsd/scenario.xsd">
    <name>Teacher authorization</name>
    <description></description>
    <baseURL>http://localhost:8080/scholagest-app/services</baseURL>
    <initializationFolder>initializer/tester/</initializationFolder>
    <calls>
        <call>
            <id>1.1 - Authenticate admin</id>
            <url>/user/authenticate</url>
            <httpMethod>GET</httpMethod>
            <parameters>username=admin&amp;password=admin</parameters>
            <expectedResult>
                <result>
                    <path>token</path>
                    <storeIn>adminToken</storeIn>
                </result>
            </expectedResult>
        </call>
        <call>
            <id>1.2 - Authenticate class teacher</id>
            <url>/user/authenticate</url>
            <httpMethod>GET</httpMethod>
            <parameters>username=clavanchy&amp;password=</parameters>
            <expectedResult>
                <result>
                    <path>token</path>
                    <storeIn>classTeacherToken</storeIn>
                </result>
            </expectedResult>
        </call>
        <call>
            <id>1.3 - Authenticate other teacher</id>
            <url>/user/authenticate</url>
            <httpMethod>GET</httpMethod>
            <parameters>username=vparvex&amp;password=</parameters>
            <expectedResult>
                <result>
                    <path>token</path>
                    <storeIn>otherTeacherToken</storeIn>
                </result>
            </expectedResult>
        </call>
        <call>
            <id>2.1 - Check the authorization (getTeachers) with the admin rights</id>
            <url>/teacher/getTeachers</url>
            <httpMethod>GET</httpMethod>
            <parameters>token=$$adminToken$$&amp;properties=pTeacherFirstName&amp;properties=pTeacherLastName</parameters>
            <expectedResult>
                <result>
                    <path>info/0/properties/pTeacherFirstName</path>
                    <value>Cédric</value>
                </result>
            </expectedResult>
        </call>
        <call>
            <id>2.2 - Check the authorization (getTeachers) with the class teacher rights</id>
            <url>/teacher/getTeachers</url>
            <httpMethod>GET</httpMethod>
            <parameters>token=$$classTeacherToken$$&amp;properties=pTeacherFirstName&amp;properties=pTeacherLastName</parameters>
            <expectedResult>
                <result>
                    <path>info/0/properties/pTeacherFirstName</path>
                    <value>Cédric</value>
                </result>
            </expectedResult>
        </call>
        <call>
            <id>2.3 - Check the authorization (getTeachers) with the other teacher rights</id>
            <url>/teacher/getTeachers</url>
            <httpMethod>GET</httpMethod>
            <parameters>token=$$otherTeacherToken$$&amp;properties=pTeacherFirstName&amp;properties=pTeacherLastName</parameters>
            <expectedResult>
                <result>
                    <path>info/0/properties/pTeacherFirstName</path>
                    <value>Cédric</value>
                </result>
            </expectedResult>
        </call>
        <call>
            <id>3.1 - Check the authorization (getTeachersInfo) with the admin rights</id>
            <url>/teacher/getTeachersInfo</url>
            <httpMethod>GET</httpMethod>
            <parameters>token=$$adminToken$$&amp;teachers=&amp;properties=pTeacherFirstName&amp;properties=pTeacherLastName</parameters>
            <expectedResult>
                <result>
                    <path>info/0/properties/pTeacherFirstName</path>
                    <value>Cédric</value>
                </result>
            </expectedResult>
        </call>
        <call>
            <id>3.2 - Check the authorization (getTeachersInfo) with the class teacher rights</id>
